
<%= link_to 'New Post', show_edit_users_path %>

<h1>about me</h1>

<h3>ユーザー名</h3>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>キャラクター </h3>
<%= @user.character %>
<h3>ランク</h3>
<%= @user.rank %>
<h3>プロフィール</h3>
<%= @user.profile %>

<div class="container d-flex justify-content-center mt-3">
  <div class="w-50">
    
    <h1>マイページ</h1>

    <hr>

    <div class="container">
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-user fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-2 mt-3">
            <div class="d-flex flex-column">
              <label for="user-name">登録情報の編集</label>
              <p>アカウント情報の編集</p>
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to show_edit_users_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
      </div>
    </div>

    <hr>

    <div class="container">
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-archive fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-2 mt-3">
            <div class="d-flex flex-column">
              <label for="user-name">キャラクター編集</label>
              <p>メインキャラクター設定できます</p>
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to show_edit_users_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
      </div>
    </div>

    <hr>
    
    <div class="container">
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-map-marked fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-3 mt-3">
            <div class="d-flex flex-column">
              <label for="user-name">ランク</label>
              <p>現在のキャラクター設定できます</p>
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to show_edit_users_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
      </div>
    </div>
    
    <hr>

    <div class="container">
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-sign-out-alt fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-2 mt-3">
            <div class="d-flex flex-column">
              <label for="user-name">ログアウト</label>
              <p>ログアウトします</p>
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to destroy_user_session_path, onclick: "event.preventDefault(); document.getElementById('logout-form').submit();" do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
          <%= form_with url: destroy_user_session_path, style: "display: none;", method: "get", id: "logout-form" do %>
          <% end %>
        </div>
      </div>
    </div>

    <hr>

  </div>
</div>